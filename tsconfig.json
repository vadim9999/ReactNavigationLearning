{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "removeComments": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "declaration": true,
    "module": "esnext",
    "sourceMap": true,
    "declarationDir": "@types",
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "babelrc",
    "metro.config.js",
    "jest.config.js"
  ]
}
